<!-- Işgär Goşmak üçin Modal-->
<div class="modal fade" id="isgarGosModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
    aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Täze işgär goşmak</h5>
                <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="p-5">
                    <form class="user" method="post" action="/dt_employees">
                        <div class="form-group row">
                            <div class="col-sm-6 mb-3 mb-sm-0">
                                <input type="text" class="form-control form-control-user" id="name"
                                    placeholder="First Name" name="name" required>
                            </div>
                            <div class="col-sm-6 mb-3 mb-sm-0">
                                <input type="date" class="form-control form-control-user" id="birthDate"
                                    placeholder="Doglan senesi" name="birthDate" required>
                            </div>
                        </div>
                        <div class="form-group">
                            <input type="text" class="form-control form-control-user" id="surname"
                                placeholder="Last Name" name="surname" required>
                        </div>
                        <div class="form-group">
                            <select class="form-control form-select" name="job_id" aria-label="Hünär saýlaň">
                                <% jobs.forEach(job=>{ %>
                                    <option value="<%= job.id %>">
                                        <%= job.job_name %>
                                    </option>
                                    <% }) %>
                            </select required>
                        </div>
                        <button class="btn btn-success btn-user btn-block">
                            Registrasiýa etmek
                        </button>
                        <a class="btn btn-secondary btn-user btn-block" data-dismiss="modal">
                            Yza
                        </a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>