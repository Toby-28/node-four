<%- include('includes/head.ejs') %>
  <style>
    .loginimg {
      /* I took the width from your post and placed it in css */
      width: 455px;
      height: 450px;
    }

    /* This will style any <img> element in .parent div */
    .loginimg img {
      height: 100%;
      width: 100%;
    }
  </style>
  </head>

  <body class="bg-gradient-primary">

    <div class="container">

      <!-- Outer Row -->
      <div class="row justify-content-center">

        <div class="col-xl-10 col-lg-12 col-md-9">

          <div class="card o-hidden border-0 shadow-lg my-5">
            <div class="card-body p-0">
              <!-- Nested Row within Card Body -->
              <div class="row">
                <div class="col-lg-6 d-none d-lg-block">
                  <div class="loginimg">
                    <img src="img/login.jpg">
                  </div>
                </div>
                <div class="col-lg-6">
                  <div class="p-5">
                    <div class="text-center">
                      <h1 class="h4 text-gray-900 mb-4">Hoş geldiňiz!</h1>
                    </div>
                    <form class="user" method="post">
                      <div class="form-group">
                        <input type="email" class="form-control form-control-user" id="exampleInputEmail"
                          aria-describedby="emailHelp" placeholder="Email adresiňizi ýazyň...">
                      </div>
                      <div class="form-group">
                        <input type="password" class="form-control form-control-user" id="exampleInputPassword"
                          placeholder="Gizlin söz">
                      </div>
                      <div class="form-group">
                        <div class="custom-control custom-checkbox small">
                          <input type="checkbox" class="custom-control-input" id="customCheck">
                          <label class="custom-control-label" for="customCheck">Ýatda saklamak</label>
                        </div>
                      </div>
                      <a href="/" class="btn btn-primary btn-user btn-block">
                        Ulgama gir
                      </a>
                    </form>
                    <hr>
                    <div class="text-center">
                      <a class="small" href="/forgot-password">Paroly unutdyňyzmy?</a>
                    </div>
                    <div class="text-center">
                      <a class="small" href="/register">Täze hasap açmak!</a>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>

        </div>

      </div>

    </div>

    <%- include('includes/scripts')%>

  </body>

  </html>