<%- include('includes/head.ejs') %>
    <style>
        .loginimg {
            /* I took the width from your post and placed it in css */
            width: 455px;
            height: 450px;
        }

        /* This will style any <img> element in .parent div */
        .loginimg img {
            height: 100%;
            width: 100%;
        }
    </style>
    </head>

    <body class="bg-gradient-primary">

        <div class="container">

            <div class="card o-hidden border-0 shadow-lg my-5">
                <div class="card-body p-0">
                    <!-- Nested Row within Card Body -->
                    <div class="row">
                        <div class="col-lg-5 d-none d-lg-block">
                            <div class="loginimg">
                                <img src="img/login.jpg">
                            </div>
                        </div>
                        <div class="col-lg-7">
                            <div class="p-5">
                                <div class="text-center">
                                    <h1 class="h4 text-gray-900 mb-4">Hasap açmak!</h1>
                                </div>
                                <form class="user" method="post">
                                    <div class="form-group row">
                                        <div class="col-sm-6 mb-3 mb-sm-0">
                                            <input type="text" class="form-control form-control-user"
                                                id="exampleFirstName" placeholder="Adyňyz">
                                        </div>
                                        <div class="col-sm-6">
                                            <input type="text" class="form-control form-control-user"
                                                id="exampleLastName" placeholder="Familýaňyz">
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <input type="email" class="form-control form-control-user"
                                            id="exampleInputEmail" placeholder="Email salgyňyz">
                                    </div>
                                    <div class="form-group row">
                                        <div class="col-sm-6 mb-3 mb-sm-0">
                                            <input type="password" class="form-control form-control-user"
                                                id="exampleInputPassword" placeholder="Gizlin söz">
                                        </div>
                                        <div class="col-sm-6">
                                            <input type="password" class="form-control form-control-user"
                                                id="exampleRepeatPassword" placeholder="Gizlin sözi gaýtalaň">
                                        </div>
                                    </div>
                                    <a href="/register" class="btn btn-primary btn-user btn-block">
                                        Hasaba almak
                                    </a>
                                </form>
                                <hr>
                                <div class="text-center">
                                    <a class="small" href="/forgot-password">Paroly unutdyňyzmy?</a>
                                </div>
                                <div class="text-center">
                                    <a class="small" href="/login">Hasap açylanmy? Ulgama giriň!</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>

        <%- include('includes/scripts')%>

    </body>

    </html>