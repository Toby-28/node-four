<!-- Content Wrapper -->
<div id="content-wrapper" class="d-flex flex-column">
    <!-- main content -->
    <div id="content">

        <%- include('../includes/topbar')%>
            <!-- end of topbar -->

            <!-- Begin page content -->
            <div class="container-fluid">
                <!-- Page Heading -->
                <div class="d-sm-flex align-items-center justify-content-between mb-4">
                    <div class="card mb-0 py-0 border-left-info">
                        <div class="card-body">
                            <h1 class="h3 mb-0 text-gray-800">Haryt we Baha</h1>
                        </div>
                    </div>
                </div>

                <div class="card shadow mb-4">
                    <div class="card-header py-3">
                        <h6 class="m-0 font-weight-bold">Haryt goşmak</h6>
                        <div class="container my-3">
                            <form class="user"
                                action="/<% if(product){ %>update-product?id=<%= product.id %><% }else{ %>create-product<% } %>"
                                method="post">
                                <div class="form-group row">
                                    <div class="col-sm-6 mb-3 mb-sm-0">
                                        <input type="text" class="form-control " name="name" placeholder="Ady" <%
                                            if(product){ %> value="<%= product.name %>" <% } %> required>
                                    </div>
                                    <div class="col-sm-6 mb-3 mb-sm-0">
                                        <input type="number" step="0.001" class="form-control " name="price"
                                            placeholder="Bahasy" <% if(product){ %> value="<%= product.price %>" <% } %>
                                                required>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <textarea name="description" class="form-control" placeholder="Beýan giriziň..."
                                        required><% if(product){ %> <%= product.description %> <% } %></textarea>
                                </div>
                                <div class="form-group row">
                                    <div class="col-sm-6 mb-3 mb-sm-0">
                                        <div class="form-group row">
                                            <div class="col-sm-6">
                                                <input type="number" class="form-control" name="stock"
                                                    id="exampleInputPassword" placeholder="Mukdary" <% if(product){ %>
                                                value="<%= product.stock %>" <% } %> required>
                                            </div>
                                            <div class="col-sm-3 mb-3 mb-sm-0">
                                                <select name="type" class="form-control">
                                                    <option value="kg" <% if( product && product.type=='kg' ){ %>
                                                        selected <% } %>
                                                            >kg</option>
                                                    <option value="sany" <% if( product && product.type=='sany' ){ %>
                                                        selected <% } %>>sany
                                                    </option>
                                                    <option value="litr" <% if( product && product.type=='litr' ){ %>
                                                        selected <% } %>>litr
                                                    </option>
                                                    <option value="metr" <% if( product && product.type=='metr' ){ %>
                                                        selected <% } %>>metr
                                                    </option>
                                                </select>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-sm-6">
                                        <input type="number" step="0.001" class="form-control "
                                            id="exampleRepeatPassword" placeholder="Arzanladyş" name="discount" <%
                                            if(product){ %> value="<%= product.discount %>" <% } %> >
                                    </div>
                                </div>

                                <% if(product){ %>
                                    <input type="submit" value="Üýtget" class="btn btn-warning btn-user btn-block">
                                    <% }else{ %>
                                        <input type="submit" value="Goşmak" class="btn btn-success btn-user btn-block">
                                        <% } %>
                            </form>
                        </div>

                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-bordered" width="100%" cellspacing="0">
                                <thead>
                                    <tr>
                                        <th>ID</th>
                                        <th>Ady</th>
                                        <th>Beýany</th>
                                        <th>Bahasy</th>
                                        <th>Mukdary</th>
                                        <th>Arzanladyş</th>
                                        <th>Amallar</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% products.forEach(product=>{ %>
                                        <tr>
                                            <td>
                                                <%= product.id %>
                                            </td>
                                            <td class=<% if(product.discount){ %> "table-danger" <% } %>>
                                                    <%= product.name %>
                                            </td>
                                            <td>
                                                <%= product.description %>
                                            </td>
                                            <td>
                                                <%= product.price %>
                                            </td>
                                            <td>
                                                <%= product.stock %>
                                                    <%= product.type %>
                                            </td>
                                            <td width="5%">
                                                <% if(product.discount){ %>
                                                    <%= product.discount %>% <% } %>
                                            </td>
                                            <td width="17%">
                                                <a href="/update-product?id=<%= product.id %>"
                                                    class="btn btn-warning btn-sm">
                                                    Üýtget
                                                </a>
                                                <a href="/remove-product?id=<%= product.id %>"
                                                    class="btn btn-danger btn-sm">
                                                    Öçürmek
                                                </a>
                                            </td>
                                        </tr>
                                        <% }) %>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
            <!-- ./container fluid -->
    </div>
    <!-- end of main content -->

    <%- include('../includes/footer.ejs')%>
        <!-- End of Footer -->
</div>